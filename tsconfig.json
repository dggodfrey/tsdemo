{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"paths": {
			"@legacyUtils": ["src/legacy/deeply/nested/because/why/not/else/util.ts"],
            "@utils": ["src/utils"],
		},
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"lib": ["ESNext", "DOM"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ES5",
		// "noImplicitAny": true,
		// "strictNullChecks": true,
		// "allowJs": true,
		// "checkJs": true
	},
	"exclude": []
}
